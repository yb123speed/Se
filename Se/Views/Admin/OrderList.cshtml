        $(function () {
            /*初始化分页*/
            if (pageCount == 0) { $(".pager").hide() }
            $(".pager").pager({ pagenumber: pageNo, pagecount: pageCount, buttonClickCallback: PageClick });
        });

        /*分页回调函数*/
        PageClick = function (pageclickednumber) {
            window.location = "/Admin/OrderList/?p=" + pageclickednumber+"&kw="+kw;
        }
